@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client
<h1>Add a Client</h1>
<hr>
@using (Html.BeginForm())
{
    <input type="hidden" name="StylistId" value=@ViewBag.StylistId />
    @Html.Label("Name", "Name: ") @Html.TextBoxFor(model => model.Name, new { @class="form-control", required="required"})

    @Html.Label("Description", "Phone number: ") @Html.TextBoxFor(model => model.PhoneNumber, new { @class="form-control"})

    @Html.Label("Description", "Other Info: ") @Html.TextBoxFor(model => model.Description, new { @class="form-control"})

    <input type="submit" value="Add Client" class="btn btn-default"/>
}

<button class="btn btn-default">@Html.ActionLink("Back to Clients List", "Details", "Stylists", new { id = ViewBag.StylistId })</button>