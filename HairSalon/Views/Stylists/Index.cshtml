@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model List<HairSalon.Models.Stylist>

<h1>Eau Claire's Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet.</h3>
} 

<ul>
@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
}
</ul>

<button class="btn btn-default">@Html.ActionLink("Add A Stylist", "Create")</button>
<button class="btn btn-default">@Html.ActionLink("Home", "Index", "Home")</button>