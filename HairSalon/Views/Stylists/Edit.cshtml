@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h1>Edit Stylist</h1>
<hr>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.StylistId)

    @Html.Label("Name", "Name: ") @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })

    @Html.Label("HireDate", "Date Hired: ") @Html.EditorFor(model => model.HireDate, new { htmlAttributes = new { @class = "form-control" } })

    @Html.Label("HourlyWage", "Hourly wage: $") @Html.EditorFor(model => model.HourlyWage, new { htmlAttributes = new { @class = "form-control", type="number" } })

    @Html.Label("Description", "Other Info: ") @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })

    <input type="submit" value="Save" class="btn btn-default"/>
}

<button class="btn btn-default">@Html.ActionLink("Back To Stylist", "Details", new { id = @Model.StylistId })</button>